<div>
  <%= form_for :message, url: agency_messages_path(@agency) do |form| %>
    <% if @agency.errors.any? %>
      <div style="color: red">
        <ul>
          <% @agency.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h3>
      How can we help?
    </h3>
    <div>
      <%= form.text_field :user_mobile_number,
        placeholder: "Please enter you mobile phone",
        required: true
      %>
    </div>
    <div>
      <%= form.text_area :content, required: true %>
    </div>
    <div>
      <%= form.submit("Send", class: "btn btn-primary") %>
    </div>
  <% end %>
</div>