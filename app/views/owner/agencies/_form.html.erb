<div >
  <%= link_to "Back to Dashboard", owner_dashboard_path %>
</div>

<hr>

<div class="agency-form" >
  <%= form_with(model: agency) do |form| %>
    <% if agency.errors.any? %>
      <div style="color: red">
        <h4><%= pluralize(agency.errors.count, "error") %> prohibited this agency from being saved:</h4>

        <ul>
          <% agency.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :pitch, style: "display: block" %>
      <%= form.text_field :pitch %>
    </div>

    <div>
      <%= form.hidden_field :latitude %>
    </div>

    <div>
      <%= form.hidden_field :longitude %>
    </div>

    <div class="actions" style="margin-top: 30px; border-bottom: 1px solid #ccc; padding-bottom: 20px;">
      <%= form.submit class: "btn btn-info" %>
    </div>
  <% end %>
</div>

<hr>

<div class="plans" style="margin-bottom: 30px; border-bottom: 1px solid #ccc; padding-bottom: 20px;">
  <h4>Treatments</h4>
  <% agency.plans.each do |p| %>
    <div class="row">
      <div class="col-md-3"><%= p.title %></div>
      <div class="col-md-3"><%= p.description %></div>
      <div class="col-md-3"><%= number_to_currency p.price %></div>
    </div>
  <% end %>
  <%= link_to "Add Treatment", new_agency_plan_path(agency), class: "btn btn-info" %>
</div>

<hr>

<div class="message" style="margin-bottom: 30px; border-bottom: 1px solid #ccc; padding-bottom: 20px;">
  <h4>Messages</h4>
  <% agency.messages.each do |m| %>
    <div class="row">
      <div class="col-md-3"><%= m.user.name || m.user.email %></div>
      <div class="col-md-3"><%= m.content %></div>
    </div>
  <% end %>

  <%= link_to "Upgrade to get unlimited messages", "", class: "btn btn-info" %>
</div>

<div class="promos" style="margin-top: 40px">
  <h4>Promos</h4>
  <%= link_to "Upgrade to get promos", "", class: "btn btn-info" %>
</div>
