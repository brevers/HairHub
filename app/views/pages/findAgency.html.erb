<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-lg-8">
      <div class="card mb-3">
        <div class="card-header">
          <h5 class="card-title">Search for an Agency</h5>
        </div>
        <div class="card-body">
          <%= form_tag findAgency_path, method: :get, class: "form-inline" do %>
            <div class="input-group mb-3">
              <%= text_field_tag :query, params[:query], placeholder: "Enter an address, city, or ZIP code", class: "form-control" %>
              <div class="input-group-append">
                <%= submit_tag "Search", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
          <div id="map"></div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-4">
      <div class="card mb-3">
        <div class="card-header">
          <h5 class="card-title">Claim Your Agency</h5>
        </div>
        <div class="card-body">
          <p>Are you the owner of an agency that's already listed on our site?</p>
          <%= link_to "Claim your agency", new_agency_registration_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key="></script>
<script>
  function initMap() {
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 12,
      center: {lat: 37.7749, lng: -122.4194}
    });
    var geocoder = new google.maps.Geocoder();

    // When the form is submitted, geocode the input address and center the map on the result
    $('form').submit(function(event) {
      event.preventDefault();
      var address = $('input[name="query"]').val();
      geocoder.geocode({'address': address}, function(results, status) {
        if (status === 'OK') {
          map.setCenter(results[0].geometry.location);
          var marker = new google.maps.Marker({
            map: map,
            position: results[0].geometry.location
          });
        } else {
          alert('Geocode was not successful for the following reason: ' + status);
        }
      });
    });

    // Add a listener to the map that allows users to claim a store
    var claimWindow = new google.maps.InfoWindow({
      content: '<h5>Claim this store</h5><p>If you are the owner of this agency, click the button below to start the claiming process.</p><button class="btn btn-success">Claim</button>'
    });
    google.maps.event.addListener(map, 'rightclick', function(event) {
      claimWindow.setPosition(event.latLng);
      claimWindow.open(map);
    });
  }
</script>