<div class="jumbotron jumbotron-fluid" style="width: 700px;">
   <div class="container">

    <h2 class="d-flex justify-content-left">Login as Client</h2>
    <br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group p-2 mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, class:"w-50 form-control", placeholder:"Email", autofocus: true, autocomplete: "email"%>
        </div>

      <div class="field form-group p-2 mb-2">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"w-50 form-control", placeholder:"Password", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-check">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <div class="d-flex justify-content-around p-2 mb-2">
          <%= f.submit "Log in", class:"btn btn-info md", style:"width: 200px;"%>
        </div>
      </div>
    <% end %>
    <br>

    <%= render "devise/shared/links"%>

  </div>
</div>
