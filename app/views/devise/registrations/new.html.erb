<div class="client-signup-box">
  <%= render "devise/shared/error_messages" %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field form-group p-2 mb-2">
      <!-- This fields tells us if the person is signing up as user or as an angency owner -->
      <%= f.hidden_field :role, class:"w-50 form-control" %>
    </div>

    <div class="field form-group p-2 mb-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"w-50 form-control", placeholder:"email@example.com", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field form-group p-2 mb-2">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class:"w-50 form-control", placeholder:"new password", autocomplete: "new-password" %>
    </div>

    <div class="field form-group p-2 mb-2">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class:"w-50 form-control", placeholder:"new password", autocomplete: "new-password" %>
    </div>

    <div class="actions p-3 mb-2">
        <%= f.submit "Sign up", class:"btn btn-info md", style:"width: 100px;" %>
    </div>
    <br>
  <% end %>
</div>
